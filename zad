6.
 {
                Console.WriteLine("podaj pierwszy kąt");
                int a = int.Parse(Console.ReadLine());
                Console.WriteLine("podaj drugi kąt");
                int b = int.Parse(Console.ReadLine());
                Console.WriteLine("podaj trzeci kąt");
                int c = int.Parse(Console.ReadLine());
                
                if (a + b + c == 180)
                {
                    if (90 > a && 90 > b && 90 > c)
                    {
                        Console.WriteLine("trojkąt ostrokatny");
                    }
                    if (90 > a && 90 > b && 90 == c)
                    {
                        Console.WriteLine("trojkąt prostakatny");
                    }
                    if (90 < a && 90 > b && 90 > c)
                    {
                        Console.WriteLine("trojkąt rozwartokatny");
                    }
                    else if (90 > a && 90 < b && 90 > c)
                    {
                        Console.WriteLine("trojkąt rozwartokatny");
                    }
                    else if (90 > a && 90 > b && 90 < c)
                    {
                        Console.WriteLine("trojkąt rozwartokatny");
                    }
                }
                else
                {
                    Console.WriteLine("nie da sie zrobic z tego trojkata");
                }

            }
