                if (a < b && a < c && a < d)
                {
                    Console.WriteLine("najmniejsza z nich:" + a);
                }
                if (b < c && b < d && b < a)
                {
                    Console.WriteLine("najmniejsza z nich:" + b);
                }
                if (c < d && c < a && c < b)
                {
                    Console.WriteLine("najmniejsza z nich:" + c);
                }
                else
                {
                    Console.WriteLine("najmniejsza z nich:" + d);
                }
